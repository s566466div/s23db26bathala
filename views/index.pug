extends layout

block content
  h1= title
  p Welcome to #{title}
  p Bathala Divya
  body
    button(id="addButton",class="btn btn-secondary", onclick="goFaster()") Press Me
    div#faster Increase the speed
  script.
    var mph = 20;
    var change = 1;
    function goFaster() {
      mph += change;
      change += 1;
      document.getElementById('faster').innerText = "MPH " + mph + " with change " + change;
    }
    